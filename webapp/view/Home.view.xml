<mvc:View controllerName="com.esr.myfirstapplication.controller.Home" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<HBox>
							<Input id="input" placeholder="I am an Inputfield" width="12rem" class="sapUiSmallMarginBeginEnd" />
							<Button type="Accept" text="Accept" press="onPress" />
						</HBox>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>